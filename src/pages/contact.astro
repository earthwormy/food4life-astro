---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

---
<Layout title="New F4L site">
 <!-- Top Navbar -->
<Navbar />

<div class=" font-bold p-5 text-3xl">Send an email to atlsurvival</div>
<div class=" sm:w-5/6 m-auto p-2 sm:p6 bg-stone-400 text-2xl">
    <form action="mailto:earthtotheworm@gmail.com"
        method="POST"
        enctype="multipart/form-data"
        name="EmailForm">
        Name:<br>
        <input type="text" size="19" name="ContactName" 
        class="border-2 border-solid shadow-sm">
        <br><br>Phone number:<br>
        <input type="text" size="19" name="ContactNumber" 
        class="border-2 border-solid shadow-sm">
        <label for="email"><br><br>Email address: &nbsp;<br></label>
        <input type="email" id="email" name="email" class="border-2 border-solid shadow-sm">
        <br><br>Message:<br> 
        <textarea name="ContactComment" rows="20" 
        class=" w-full border-2 border-solid shadow-sm">
        </textarea>
        <br><br> 
        <input type="submit" value="Submit" 
        class=" bg-stone-500 rounded px-5 py-2 border-2 border-solid border-stone-800 shadow-sm"> 
    </form>
</div>


<Footer/>
</Layout>